
<div class="container">
  <div class="card mb-3" style="max-width: 840px;">
    <div class="row g-0">
      <div class="col-md-4">

  <div class="card-product">
    <img src="<%= cl_image_path @teacher.photo.key, crop: :fill %>" class="img-fluid rounded-start" alt="...">
    <div class="card-product-infos">
      <h1><%= @teacher.first_name %> <%= @teacher.last_name %></h1>
      <ul class="list-unstyled">
        <li><strong>Location:</strong> <%= @teacher.location %></li>
        <li><strong>Specialty:</strong> <%= @teacher.specialty %></li>
        <br>
        <li><%= @teacher.bio %></li>
      </ul>
      <h5 class="card-trip-pricing"><strong>£<%= rand(40..150) %>.00/h</strong></h5>
      <br>
      <%= link_to "Back to Teachers List", teachers_path, class: "btn btn-primary" %>
    </div>
  </div>
          <li><%= @teacher.location %></li>
          <li><%= @teacher.bio %></li>
          <li><%= @teacher.specialty %></li>
          <li>£<%= @teacher.price %></li>
        </ul>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>Book an Appointment</h1>
        <%= simple_form_for [@teacher, @booking] do |f| %>
          <%= f.input :start_at, as: :datetime, html5: true %>
          <%= f.input :end_at, as: :datetime, html5: true %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>



