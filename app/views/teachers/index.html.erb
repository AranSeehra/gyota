<h1 class="mx-auto text-center mt-0 mb-3"> Meet our TA's </h1>



<div class="container">

  <%= form_with url: teachers_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a TA or a city"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <div class="row">


    <div class="col">

       <% @teachers.each do |teacher|%>
            <%= link_to teacher_path(teacher) do %>
                  <div class="d-flex m-3">
                      <%# <div class=""> %>
                        <img src="<%= cl_image_path teacher.photo.key, width: 200, height: 200, crop: :fill %>" class="rounded-start" alt="...">
                              <div class="p-3">
                                <h5 class=""> <strong> <%= link_to "#{teacher.first_name} #{teacher.last_name}", teacher_path(teacher)  %></strong></h5>
                                <strong><p class=""><%= teacher.location%>.</p></strong>
                                <h6 class="teacher-price">Â£<%= teacher.price %></h6>
                              </div>
                      <%# </div> %>
                  </div>
                  <hr>
          <% end %>
        <% end %>
    </div>

    <div class="col">
      <div id="map" style="position: sticky; top: 68px;">
        <div style="width: 100%; height: 700px;"
              data-controller="map"
              data-map-markers-value="<%= @markers.to_json %>"
              data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>

  </div>
</div>
