<h4 class="mx-auto text-left ms-5 pt-4 mb-3"> Your Bookings</h4>

<ul>
<br>
  <div class="row">
    <% @user.bookings.each do |booking| %>
    <div class="col-md-4">
      <div class="container">
        <div class="card mb-3 pb-0 shadow mb-5 bg-body rounded">
          <div class="card-body mt-1">
            <img class="card-img-top" src="<%= cl_image_path booking.teacher.photo.key, width: 400, height: 300, crop: :fill %>" class="img-fluid rounded-start mb-2" alt="...">
            <p>Your booking with: </p>
            <h5 class="mt-2"><strong><%= booking.teacher.first_name %> <%= booking.teacher.last_name %></strong></h5>

            <p><strong>Date: <%= booking.start_at.day %>/<%= booking.start_at.month %>/<%= booking.start_at.year %></strong></p>
            <p><strong>Session: <%= booking.start_at.hour %>:<%= booking.start_at.min %> - <%= booking.end_at.hour %>:<%= booking.end_at.min%></strong></p>
             <p> <%= booking.teacher.location %></p>

            <div class="card-trip-pricing d-flex justify-content-between">
              <p><%= link_to "",
                booking_path(booking),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class:"fa fa-trash fa-0x " %></p>
              <h5><strong>Â£<%= rand(10..50) %>.00/h</strong></h5>
            </div>
            <%# <p class="card-text"><small class="text-muted">Last updated <%= rand(0..5) mins ago</small></p> %>


          </div>
        </div>
      </div>
    </div>
   <% end %>
