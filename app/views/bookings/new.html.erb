<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>Book an Appointment</h1>
        <%= simple_form_for [@teacher, @booking] do |f| %>
          <%= f.input :start_at %>
          <%= f.input :end_at %>
          <%= f.submit %>
          <%= link_to "Back to teacher", teacher_path(@teacher) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
